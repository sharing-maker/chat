{
  "name": "chat-sdk-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "A modern React Chat SDK monorepo with Next.js demo app",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "dev:crm": "turbo run dev --scope=@droppii/web... --no-cache",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "node ./scripts/postinstall-copy-wasm.mjs",
    "lint": "turbo run lint",
    "release": "turbo run build --filter=!@chat-sdk/web && changeset publish",
    "type-check": "turbo run type-check",
    "version-packages": "changeset version"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.85.5",
    "axios": "^1.11.0",
    "clsx": "^2.1.1",
    "next": "14.2.16",
    "path": "^0.12.7",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.62.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@tanstack/eslint-plugin-query": "^5.83.1",
    "@turbo/gen": "^1.10.12",
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8.48.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.4.1",
    "postcss": "^8.5",
    "prettier": "^3.0.0",
    "turbo": "^1.10.12",
    "typescript": "^5"
  },
  "packageManager": "pnpm@9.15.5",
  "engines": {
    "node": ">=18"
  }
}
