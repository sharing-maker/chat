{
  "name": "@droppii-org/chat-sdk",
  "version": "0.0.42",
  "description": "Droppii React Chat SDK",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components/*": {
      "import": "./dist/components/*.js",
      "types": "./dist/components/*.d.ts"
    },
    "./hooks/*": {
      "import": "./dist/hooks/*.js",
      "types": "./dist/hooks/*.d.ts"
    },
    "./context/*": {
      "import": "./dist/context/*.js",
      "types": "./dist/context/*.d.ts"
    },
    "./types/*": {
      "import": "./dist/types/*.js",
      "types": "./dist/types/*.d.ts"
    },
    "./screens/*": {
      "import": "./dist/screens/*.js",
      "types": "./dist/screens/*.d.ts"
    },
    "./assets/*": {
      "import": "./dist/assets/*.js",
      "types": "./dist/assets/*.d.ts"
    },
    "./constants/*": {
      "import": "./dist/constants/*.js",
      "types": "./dist/constants/*.d.ts"
    },
    "./layout/*": {
      "import": "./dist/layout/*.js",
      "types": "./dist/layout/*.d.ts"
    },
    "./utils/*": {
      "import": "./dist/utils/*.js",
      "types": "./dist/utils/*.d.ts"
    },
    "./services/*": {
      "import": "./dist/services/*.js",
      "types": "./dist/services/*.d.ts"
    },
    "./locales/*": "./dist/locales/*",
    "./styles/global.css": "./dist/styles/global.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm build:css && tsc -p tsconfig.build.json && pnpm copy-assets",
    "build:css": "tailwindcss -i ./src/styles/global.css -o ./dist/styles/global.css --minify",
    "dev": "tsc --noEmit --watch",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm build",
    "copy-assets": "cp -R src/assets dist && cp -R src/locales dist"
  },
  "keywords": [
    "chat",
    "sdk",
    "react",
    "messenger-style"
  ],
  "author": "Garru",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@lexical/code": "^0.34.0",
    "@lexical/html": "^0.34.0",
    "@lexical/link": "^0.34.0",
    "@lexical/list": "^0.34.0",
    "@lexical/react": "^0.34.0",
    "@lexical/rich-text": "^0.34.0",
    "@openim/wasm-client-sdk": "3.8.3-patch.10",
    "@tailwindcss/postcss": "^4.1.12",
    "@tanstack/react-query": "^5.85.5",
    "ahooks": "^3.9.4",
    "antd": "^5.27.0",
    "axios": "^1.11.0",
    "clsx": "^2.0.0",
    "dayjs": "^1.11.13",
    "i18next": "^25.5.2",
    "jwt-decode": "^4.0.0",
    "lexical": "^0.34.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.263.1",
    "mitt": "^3.0.1",
    "postcss": "^8.5.6",
    "react-i18next": "^15.7.3",
    "react-icomoon": "^2.6.1",
    "react-infinite-scroll-component": "^6.1.0",
    "react-sticky-box": "^2.0.5",
    "react-virtuoso": "^4.14.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss": "^3.3.0",
    "uuid": "^11.1.0",
    "zustand": "^5.0.7"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "typescript": "^5.2.2"
  }
}
